{
  "extends": "tslint-config-standard",
  "rules":{
    "indent": [true, "spaces"],
    "ter-indent": [true, 2],
    "semicolon": true,
    "space-before-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"     
      }
    ]
  }
}